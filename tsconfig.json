{
    "compileOnSave": true,
    "compilerOptions": {
        "module": "commonjs",
        "noImplicitAny": false,
        "removeComments": true,
        "experimentalDecorators": true,
        "preserveConstEnums": true,
        "outDir": "./build",
        "sourceMap": true,
        "pretty": true,
        "declaration": true,
        "typeRoots": [
            "node_modules/@types"
        ]
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules"
    ]
}
